{% extends 'base.html.twig' %}

{% block title %}Portfolio - Mes Projets{% endblock %}

{% block body %}
<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-10">
                <h1 class="display-5 fw-bold mb-4">
                    <i class="fas fa-folder-open me-3"></i>Mon Portfolio
                </h1>
                <p class="lead">
                    Découvrez les projets sur lesquels j'ai travaillé pendant mon stage chez Clever Age
                </p>
            </div>
        </div>
    </div>
</section>

<!-- Projets -->
<section class="py-5">
    <div class="container">
        <div class="row">
            {% for project in projects %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ project.title }}</h5>
                        <p class="card-text">{{ project.description }}</p>
                        <div class="mb-3">
                            {% for tech in project.technologies %}
                                <span class="tech-badge">{{ tech }}</span>
                            {% endfor %}
                        </div>
                        <span class="badge bg-secondary">{{ project.category }}</span>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}
